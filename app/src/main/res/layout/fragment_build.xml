<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textAlignment="center">

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tw_buildName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:gravity="right"
        android:padding="8dp"
        android:text="build name"
        android:textColor="#ffffffff"
        android:textIsSelectable="false"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tw_buildDesc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:gravity="left"
        android:padding="8dp"
        android:text="build desc"
        android:textColor="#ffffffff"
        android:textIsSelectable="false"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tw_gearTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:gravity="left"
        android:padding="8dp"
        android:text="Recommended gear"
        android:textColor="#ffffffff"
        android:textIsSelectable="false"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tw_Gear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:gravity="left"
        android:padding="8dp"
        android:text="Gear list"
        android:textColor="#ffffffff"
        android:textIsSelectable="false"
        android:textSize="16sp"
        android:textStyle="normal" />

        <TextView
            android:id="@+id/tw_statsTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:gravity="left"
            android:padding="8dp"
            android:text="Attribute stats"
            android:textColor="#ffffffff"
            android:textIsSelectable="false"
            android:textSize="22sp"
            android:textStyle="bold" />
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tw_stats"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:gravity="left"
            android:padding="8dp"
            android:paddingTop="16dp"
            android:text="Stats"
            android:textColor="#ffffffff"
            android:textIsSelectable="false"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tw_values"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="8dp"
            android:paddingTop="16dp"
            android:text="Values"
            android:textColor="#ffffffff"
            android:textIsSelectable="false"
            android:textSize="16sp" />

        </LinearLayout>
</LinearLayout>
</ScrollView>